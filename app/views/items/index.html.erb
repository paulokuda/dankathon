<h1>Listing items</h1>

<table>
  <thead>
    <tr>
      <th>Latitude</th>
      <th>Longitude</th>
      <th>Address</th>
      <th>Description</th>
      <th>Title</th>
      <th>Phone</th>
      <th>Price</th>
      <th>Condition</th>
      <th>Sold</th>
      <th></th>
      <th></th>
      <th></th>
    </tr>
  </thead>

  <tbody>
    <% @items.each do |item| %>
      <tr>
        <td><%= item.latitude %></td>
        <td><%= item.longitude %></td>
        <td><%= item.address %></td>
        <td><%= item.description %></td>
        <td><%= item.title %></td>
        <td><%= item.phone %></td>
        <td><%= item.price %></td>
        <td><%= item.condition %></td>
        <td><%= item.sold %></td>
        <td><%= link_to 'Show', item %></td>
        <td><%= link_to 'Edit', edit_item_path(item) %></td>
        <td><%= link_to 'Destroy', item, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

