


  <%= simple_form_for(@item) do |f| %>
  <%= f.error_notification %>
<br><br>
  <div class="form-inputs">
   
    <%#= f.input :latitude %>
    <%#= f.input :longitude %>
    <%= f.input :address %>
    <%= f.input :title %>
    <%= f.input :description %>
    
    <%= f.input :phone %>
    

    <%= f.input :price %>
    <%= f.input :condition %>
    <%#= f.input :sold %>
    <%= f.association :user, :collection => User.all, :label_method => :first_name, :value_method => :id %> 

    
  </div>

  <div class="form-actions">
    <%= f.button :submit, class: "button tiny radius" %>
    <%= link_to 'Cancel', users_path, class: "button tiny radius" %>
    
  </div>
<% end %>





